{
  "configuration": {
    "status": "WARN",
    "name": "DiscGolfLoggingConfig",
    "monitorInterval": "120",
    "verbose": "false",
    "ThresholdFilter": { "level": "TRACE" },
    "appenders": {
      "Console": {
        "name": "Console",
        "PatternLayout": { "pattern": "%d %-5level %logger [%t] %m%n%rEx{short}" }
      }
    },
    "loggers": {
      "logger": [
        { "name": "org.springframework", "level": "ERROR" },
        { "name": "org.mongodb.driver.protocol", "level": "DEBUG" },
        { "name": "org.springframework.data.document.mongodb", "level": "DEBUG" }
      ],
      "root": {
        "level": "ERROR",
        "AppenderRef": [ { "ref": "Console" } ]
      }
    }
  }
}